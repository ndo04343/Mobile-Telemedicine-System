<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="15dp"
            android:baselineAligned="false"
            android:text="Next\n   Appointment"
            android:textColor="#0070C0"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/titlebar"
       >

        <TextView
            android:id="@+id/p_res_date"
            android:layout_width="275dp"
            android:layout_height="45dp"
            android:background="#F2F2F2"
            android:ems="10"
            android:gravity="center_vertical"
            android:onClick="OnClickHandler"
            android:hint="   YY/MM/DD"
            android:textColor="#000000"
            android:textColorHint="#000000"/>


        <Spinner
            android:id="@+id/p_res_time"
            android:layout_width="275dp"
            android:layout_height="45dp"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/spinner_background2"
            />
        
        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <Button
                android:id="@+id/p_res_untact"
                android:layout_width="50dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:background="@drawable/button_border2"
                android:layout_marginEnd="10dp"
                android:text="비대면"
                android:onClick="OnClickHandler"
                android:textColor="#00518E"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:textSize="22sp" />
            <Button
                android:id="@+id/p_res_contact"
                android:layout_marginStart="10dp"
                android:layout_width="50dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:background="@drawable/button_border2"
                android:text="대면"
                android:onClick="OnClickHandler"
                android:textColor="#00518E"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:textSize="22sp" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/p_res_yes"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:background="#0070C0"
            android:text="예약"
            android:onClick="onClick"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/p_res_no"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:background="@drawable/button_border"
            android:text="취소"
            android:textColor="#0070C0"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>